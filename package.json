{
  "name": "jest-css-modules-transform",
  "description": "Jest's preprocessor for css, sass, less, stylus modules generated with Webpack",
  "version": "2.2.0",
  "license": "MIT",
  "author": "Mikhail Bodrov",
  "engines": {
    "node": ">=6.4.0"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/Connormiha/jest-css-modules-transform.git"
  },
  "keywords": [
    "jest",
    "webpack",
    "css-import",
    "transform",
    "preprocessor",
    "class",
    "classname",
    "css",
    "stylus",
    "sass",
    "scss",
    "less",
    "module",
    "css-module"
  ],
  "scripts": {
    "coverage": "jest --coverage",
    "lint": "eslint src",
    "prepare": "npm run lint && npm test",
    "test": "npm run test:base && npm run test:config && npm run test:sassrc && npm run test:camel-case && npm run test:dashes",
    "test:base": "jest --no-cache ",
    "test:config": "jest --no-cache --config jest-with-css-config.js ",
    "test:sassrc": "jest --no-cache --config jest-with-sassrc.js",
    "test:camel-case": "jest --no-cache --config jest-with-camel-case.js",
    "test:dashes": "jest --no-cache --config jest-with-dashes.js"
  },
  "devDependencies": {
    "@types/jest": "24.0.13",
    "@types/node": "12.0.4",
    "eslint": "5.16.0",
    "eslint-plugin-jest": "22.6.4",
    "husky": "2.3.0",
    "jest-cli": "24.8.0",
    "less": "3.9.0",
    "node-sass": "4.12.0",
    "stylus": "0.54.5",
    "typescript": "3.5.1"
  },
  "dependencies": {
    "lodash": "^4.0.0",
    "postcss": "^7.0.16",
    "postcss-nested": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test"
    }
  }
}
